# .streamlit/secrets.toml
# This file is for LOCAL development if you want to test with real keys.
# DO NOT commit this file to Git if it contains real keys!
# Streamlit Cloud has a dedicated "Secrets" settings area where you paste this content.

[binance]
# Your Binance API Key
api_key = "YOUR_API_KEY_HERE"

# Your Binance API Secret
api_secret = "YOUR_API_SECRET_HERE"

# Set to true to use MAINNET (Real Data). Set to false for TESTNET.
product_mode = true

# Set to true ONLY if you are in the US using Binance.US
use_binance_us = false
